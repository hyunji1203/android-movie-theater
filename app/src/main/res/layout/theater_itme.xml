<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        tools:text="선릉"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theater_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <TextView
        android:text="@string/theater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theater_title_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/theater_title"
        app:layout_constraintTop_toTopOf="@+id/theater_title" />

    <TextView
        tools:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theater_count"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/theater_title"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="19dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/theater_arrow"
        android:id="@+id/right_arrow"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp" />

    <TextView
        android:text="@string/theater_time_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theater_count_text"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/theater_count"
        app:layout_constraintTop_toBottomOf="@+id/theater_title"
        android:layout_marginTop="6dp" />


</androidx.constraintlayout.widget.ConstraintLayout>